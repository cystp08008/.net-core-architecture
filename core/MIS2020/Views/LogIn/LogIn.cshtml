@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <style>
    </style>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/css/logIn.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">



</head>

<body>

    <nav id="navLogIn" class="navbar shadow-sm navbar-light bg-white justify-content-between">
        <div class="mx-auto order-0">

            <a class="navbar-brand" href="#"></a>
        </div>
    </nav>
    <div class="container-fluid">
        <section class="row justify-content-center">
            <section class="col-12 col-sm-6 col-md-3">
                <form class="form-container" action="@Url.Action("LogIn","LogIn")" method="post">
                    @Html.AntiForgeryToken()
                    <br /><br />
                    <h2 class="text-center font-weight-bold"></h2>
                    <br />
                    <h3 class="text-center font-weight-bold">登入</h3>

                    <br />
                    <label for="Id" class="sr-only">帳號</label>
                    <div id="logInCusrName">
                        <input name="CusrName" id="CusrName" class="form-control" placeholder="帳號" maxlength="10" onkeyup="value=value.replace(/[\W]/g,'') " v-model="cusrName" required autofocus>
                    </div>
                    <label for="Password" class="sr-only">密碼</label>
                    <br />
                    <input type="password" name="CusrPw" class="form-control" placeholder="密碼" maxlength="35" onkeyup="value=value.replace(/[\W]/g,'') " required>
                    <br />
                    <button class="btn btn-lg btn-outline-primary btn-block" type="submit">登入</button>
                    <br />
                    <p class="text-center" style="color:red;">@ViewBag.Mess</p>
                </form>
            </section>
        </section>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <!-- 引入Vue -->
    <script src="https://unpkg.com/vue/dist/vue.js"></script>
    <script src="~/js/logIn.js"></script>
    <script>

        //登入帳號
        var logInCusrName = new Vue({
            el: '#logInCusrName',
            data: {
                cusrName: localStorage.cusrName
            }
        });

    </script>
</body>
</html>
